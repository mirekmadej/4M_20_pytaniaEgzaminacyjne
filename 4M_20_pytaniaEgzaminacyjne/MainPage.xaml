<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_4M_20_pytaniaEgzaminacyjne.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            >
            <Label 
                Text="Pytanie nr 1/10"
                HorizontalOptions="Center"
                FontSize="18"
                x:Name="lblNaglowek"/>
            <Label
                Text="pytanie"
                FontSize="18"
                x:Name="lblPytanie"
                />
            <RadioButton
                x:Name="rbtO1"
                Content="odp 1"
                />
            <RadioButton
                x:Name="rbtO2"
                Content="odp 2"
                />
            <RadioButton
                x:Name="rbtO3"
                Content="odp 3"
                />
            <RadioButton
                x:Name="rbtO4"
                Content="odp 4"
                />
            <Button
                Text="zatwierdź"
                Clicked="btnZatwierdzClicked"
                x:Name="btnZatwierdz"
                />
            <Label
                Text="punkty: 0/10"
                x:Name="lblPunkty"
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
